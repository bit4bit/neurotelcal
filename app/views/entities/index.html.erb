    <td><%= entity.slogan %></td>
    <td><%= entity.phone %></td>
    <td><%= entity.direction %></td>
    <td><%= entity.leader %></td>
    <td><%= entity.description %></td>
    <td><%= link_to 'Show', entity %></td>
